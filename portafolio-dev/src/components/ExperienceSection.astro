---
import experienceData from "../data/experience.json";

interface ExperienceEntry {
  id: number;
  years: string;
  info: string;
  institution: string;
  description: string;
}

const experiences: ExperienceEntry[] = experienceData;
---

<section class="py-12 px-6 md:px-12 lg:px-24 bg-gray-900 text-gray-200">
    <div class="max-w-6xl mx-auto">
      <h2 class="text-3xl font-bold text-green-400 mb-10 flex items-center">
        <span class="font-mono text-xl mr-2">&lt;&gt;</span>~/experiencia
      </h2>
    <div
      class="bg-gray-800 text-gray-300 px-4 py-2 rounded-t-lg flex items-center text-sm"
    >
      <svg
        xmlns="http://www.w3.org/2000/svg"
        class="h-4 w-4 mr-2 text-green-500"
        viewBox="0 0 20 20"
        fill="currentColor"
      >
        <path
          fill-rule="evenodd"
          d="M3 4a2 2 0 00-2 2v10a2 2 0 002 2h14a2 2 0 002-2V6a2 2 0 00-2-2H3zm0 2h14v10H3V6z"
          clip-rule="evenodd"></path>
        <path fill-rule="evenodd" d="M3 6h14v10H3V6z" clip-rule="evenodd"
        ></path>
        <path d="M5 9h10v1H5V9z"></path>
        <path d="M5 12h10v1H5V12z"></path>
        <path d="M5 15h7v1H5V15z"></path>
      </svg>
      mi_experiencia.log
    </div>

    <div
      class="bg-gray-800 p-6 rounded-b-lg shadow-lg font-mono text-sm overflow-x-auto"
    >
      <pre
        class="whitespace-pre-wrap">
        {experiences.map((entry) => (
          <>
            <span class="text-yellow-400">[{entry.years}]</span> <span class="text-green-500">INFO</span> - {entry.info}
            <br />
            <span class="text-gray-400">//</span> <span class="text-cyan-400">{entry.institution}</span>
            <span class="text-gray-400">//</span> {entry.description}
            <br />
            <br />
          </>
        ))}
      </pre>
    </div>
  </div>
</section>
